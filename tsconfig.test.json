{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // テスト環境固有の型定義を追加
    "types": ["vitest/globals", "node", "@testing-library/jest-dom", "vitest/importMeta"],
    
    // テスト環境でのパスエイリアス設定
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["./tests/*"]
    },
    
    // テスト環境での追加設定
    "allowImportingTsExtensions": false,
    "moduleResolution": "bundler"
  },
  "include": [
    // 基本ファイル
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx", 
    
    // テスト専用型定義（優先的に読み込み）
    "tests/types.d.ts",
    
    // テスト関連ファイルをすべて含める
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.test.ts", 
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    
    // テスト設定ファイル
    "vitest.config.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    // 最小限の除外設定（テスト関連ファイルは除外しない）
    "node_modules",
    "dist/**/*",
    ".next/**/*"
  ]
}